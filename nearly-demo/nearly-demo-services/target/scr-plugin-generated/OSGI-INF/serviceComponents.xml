<?xml version="1.0" encoding="UTF-8"?>
<components xmlns:scr="http://www.osgi.org/xmlns/scr/v1.0.0">
    <scr:component enabled="true" immediate="true" name="com.nearly.demo.services.GoodbyeWorldService">
        <implementation class="com.nearly.demo.services.GoodbyeWorldService"/>
        <service servicefactory="false">
            <provide interface="com.nearly.demo.services.GoodbyeWorldService"/>
        </service>
        <property name="service.vendor" type="String" value="CQ Blueprints"/>
        <property name="service.description" type="String" value="Provides a friendly farewell."/>
        <property name="service.pid" value="com.nearly.demo.services.GoodbyeWorldService"/>
    </scr:component>
    <scr:component enabled="true" name="com.nearly.demo.services.errorhandler.ErrorHandlerServlet">
        <implementation class="com.nearly.demo.services.errorhandler.ErrorHandlerServlet"/>
        <service servicefactory="false">
            <provide interface="javax.servlet.Servlet"/>
        </service>
        <property name="sling.servlet.paths" value="/services/nearly/demo/errorhandler"/>
        <property name="service.pid" value="com.nearly.demo.services.errorhandler.ErrorHandlerServlet"/>
        <reference name="localeResolver" interface="org.apache.sling.i18n.LocaleResolver" cardinality="0..1" policy="dynamic" bind="bindLocaleResolver" unbind="unbindLocaleResolver"/>
    </scr:component>
</components>
